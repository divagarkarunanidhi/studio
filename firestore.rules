
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isAdmin() {
      // Check for the admin role on the custom claims of the auth token
      // This avoids a recursive get() call that causes permission errors.
      return isSignedIn() && request.auth.token.role == 'admin';
    }

    match /users/{userId} {
      // Admins can get any user doc, others can only get their own.
      allow get: if isOwner(userId) || isAdmin();
      allow list: if isAdmin();
      // Only admins can create, update, or delete user profile documents.
      allow write: if isAdmin();
    }

    match /TAASBugSenseAI/{fileId} {
      allow read, create, update, delete: if isSignedIn();
    }
  }
}
